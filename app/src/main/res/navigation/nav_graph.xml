<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/earthquakeListFragment">

    <fragment
            android:id="@+id/earthquakeListFragment"
            android:name="com.example.earthquakeqazaqedition.presentation.fragment.EarthquakeListFragment"
            android:label="fragment_earthquake_list"
            tools:layout="@layout/fragment_earthquake_list">
        <action
                android:id="@+id/action_earthquakeListFragment_to_filterBottomSheetFragment"
                app:destination="@id/filterBottomSheetFragment"/>
        <action
                android:id="@+id/action_earthquakeListFragment_to_loginFragment"
                app:destination="@id/loginFragment"/>
    </fragment>
    <fragment
            android:id="@+id/filterBottomSheetFragment"
            android:name="com.example.earthquakeqazaqedition.presentation.fragment.FilterBottomSheetFragment"
            android:label="fragment_filter_bottom_sheet"
            tools:layout="@layout/fragment_filter_bottom_sheet">
        <action
                android:id="@+id/action_filterBottomSheetFragment_to_earthquakeListFragment2"
                app:destination="@id/earthquakeListFragment"/>
    </fragment>
    <fragment
            android:id="@+id/loginFragment"
            android:name="com.example.earthquakeqazaqedition.presentation.fragment.LoginFragment"
            android:label="login_fragment"
            tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/action_loginFragment_to_registerFragment"
                app:destination="@id/registerFragment"/>
        <action
                android:id="@+id/action_loginFragment_to_profileFragment"
                app:destination="@id/profileFragment"/>
    </fragment>
    <fragment
            android:id="@+id/registerFragment"
            android:name="com.example.earthquakeqazaqedition.presentation.fragment.RegisterFragment"
            android:label="register_fragment"
            tools:layout="@layout/fragment_register">
        <action
                android:id="@+id/action_registerFragment_to_loginFragment"
                app:destination="@id/loginFragment"/>
    </fragment>
    <fragment
            android:id="@+id/profileFragment"
            android:name="com.example.earthquakeqazaqedition.presentation.fragment.ProfileFragment"
            android:label="profile_fragment"
            tools:layout="@layout/fragment_profile">
        <action
                android:id="@+id/action_profileFragment_to_loginFragment"
                app:destination="@id/loginFragment"/>
    </fragment>
</navigation>