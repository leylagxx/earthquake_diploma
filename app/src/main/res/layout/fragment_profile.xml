<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Input Container -->
        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Жерсілікініс магнитудасын болжау"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_green_dark"
                android:padding="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/longitudeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Бойлық (мыс. 76.893)"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/latitudeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ендік (мыс. 43.256)"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/depthEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Тереңдік (км)"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/cdiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CDI (мыс. 5)"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/mmiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MMI (мыс. 3)"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/sigEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Сиг (мыс. 10)"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/dminEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dmin (мыс. 0.012)"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/nstEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nst (мыс. 15)"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/gapEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Аралық (мыс. 30)"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/detectButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Анықтау"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_green_dark"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Result Container -->
        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/resultMagnitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Результат"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:padding="16dp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Назад"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_green_dark"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
